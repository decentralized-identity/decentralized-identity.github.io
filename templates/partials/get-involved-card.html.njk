{% set default_calendar = "https://bit.ly/dif-calendar" %}
{% set default_recordings = "https://identity.foundation/recordings" %}

<div class="container">
  <div class="col-10 col-md-8 col-lg-6 m-10px-t margin-center">
    <dt>Get Involved</dt>

    <div class="meeting-links-container">
      <div class="meeting-link-item">
          <a class="block-link icon-link" href="{{ calendar_link | default(default_calendar) }}">Subscribe to DIF Calendar</a>
      </div>
      <div class="meeting-link-item">
          <a class="block-link icon-link" href="{{ recordings_link | default(default_recordings) }}">Recordings of Recent Meetings</a>
      </div>

      {% if discussionChannels %}
        {% for channel in discussionChannels %}
        <div class="meeting-link-item">
            <a class="block-link icon-link" href="{{ channel.href }}">{{ channel.text }}</a>
        </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if meetingSchedule %}
    <div class="meeting-schedule-section">
      <dt>Meeting Schedule</dt>
      <div class="meeting-times">
        {% for schedule in meetingSchedule %}
        <div class="meeting-time-item">
          {% if schedule.key %}
          <span class="meeting-icon">ðŸ“…</span>
          <div class="meeting-text">
            <span class="meeting-label">{{ schedule.key }}</span>
            <span class="meeting-value">{{ schedule.value }}</span>
          </div>
          {% else %}
          <span class="meeting-icon">ðŸ“…</span>
          <span class="meeting-value">{{ schedule.value }}</span>
          {% endif %}
        </div>
        {% endfor %}
      </div>
    </div>
    {% else %}
    <div class="meeting-schedule-section">
      <p class="no-meetings">Contact the chair for information about meeting times.</p>
    </div>
    {% endif %}

    {% if type == "wg" %}
    <div class="membership-notice">
      <p><em>You must be a DIF member to participate in this group:</em><br><a href="https://identity.foundation/join"><u>Join DIF</u></a></p>
    </div>
    {% endif %}
  </div>
</div>

<style>
.meeting-schedule-section {
  margin-top: 1.5rem;
  padding: 1rem;
  background-color: #f8f9fa;
  border-radius: 4px;
}

.meeting-schedule-section h4 {
  margin-bottom: 0.75rem;
  color: #495057;
  font-size: 1.1rem;
}

.meeting-times {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.meeting-time-item {
  display: flex;
  align-items: flex-start;
  gap: 0.5rem;
}

.meeting-icon {
  font-size: 1rem;
  line-height: 1.5;
  color: #6c757d;
}

.meeting-text {
  display: flex;
  flex-direction: column;
  gap: 0.1rem;
}

.meeting-label {
  color: #6c757d;
  font-size: 0.9rem;
}

.meeting-value {
  color: #495057;
  font-weight: normal;
}

.no-meetings {
  color: #6c757d;
  font-style: italic;
}

.membership-notice {
  margin-top: 1.5rem;
  text-align: center;
  padding: 1rem;
  background-color: #f8f9fa;
  border: 2px solid #0066cc;
  border-radius: 4px;
}

.membership-notice p {
  margin: 0;
  font-weight: 600;
  color: #2c3e50;
}

.membership-notice em {
  font-style: normal;
  color: #0066cc;
}

.membership-notice a {
  color: #0066cc;
  text-decoration: none;
  font-weight: 700;
  margin-left: 0.5rem;
}

.membership-notice a:hover {
  text-decoration: underline;
  color: #004c99;
}
</style>




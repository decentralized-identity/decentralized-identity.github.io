<section class="counter-section">
  <div class="container">
    <div class="row justify-content-center m-45px-b md-m-20px-b sm-m-15px-b">
      <div class="col-12 col-md-10 col-lg-7">
        <div class="section-title text-center">
          <h2 class="font-alt">Chairs</h2>
          <div class="title-border">
            <span class="lg"></span><span class="md"></span><span class="sm"></span>
          </div>
          <p>The following DIF members lead the work in this group, contact them for more info on the projects, specs, and development happening within.</p>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      {% for key, val in chairs %}
        <div class="col-10 col-md-6 col-lg-4 m-15px-tb">
          <div class="our-team">
            <div class="img">
              <img src="{{ val.photo }}"/>
            </div>
            <div class="info">
              <h6>{{ key }}</h6>
              <label>{{ val.title }}</label>
            </div>
            <ul class="social-icons">
              {% if val.linkedin %}
                <li>
                  <a class="linkedin" href="https://www.linkedin.com/in/{{ val.linkedin }}">
                    <svg><use xlink:href="/images/icons.svg#linkedin"></use></svg>
                  </a>
                </li>
              {% endif %}
              {% if val.twitter %}
                <li>
                  <a class="twitter" href="https://twitter.com/{{ val.twitter }}">
                    <svg><use xlink:href="/images/icons.svg#twitter"></use></svg>
                  </a>
                </li>
              {% endif %}
              {% if val.medium %}
                <li>
                  <a class="medium" href="https://medium.com/{{ val.medium }}">
                    <svg><use xlink:href="/images/icons.svg#medium"></use></svg>
                  </a>
                </li>
              {% endif %}
              {% if val.bluesky %}
                <li>
                  <a class="bluesky" href="https://bsky.app/profile/{{ val.bluesky }}">
                    <svg><use xlink:href="/images/icons.svg#bluesky"></use></svg>
                  </a>
                </li>
              {% endif %}
            </ul>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section> 

{% set default_calendar = "https://calendar.google.com/calendar/embed?src=decentralized.identity%40gmail.com" %}
{% set default_recordings = "https://docs.google.com/spreadsheets/d/1wgY-COBzXZxF1eZQm4jxL2BwIH6dXLyp/edit#gid=262837586" %}

<section class="counter-section">
  <div class="container">
    <div class="row justify-content-center m-45px-b md-m-20px-b sm-m-15px-b">
      <div class="col-12 col-md-10 col-lg-7">
        <div class="section-title text-center">
          <h2 class="font-alt">Meeting Information</h2>
          <div class="title-border">
            <span class="lg"></span>
            <span class="md"></span>
            <span class="sm"></span>
          </div>
          <div class="meeting-links-container">
            <div class="meeting-link-item">
              <svg class="meeting-icon">
                <use xlink:href="/images/icons.svg#calendar"></use>
              </svg>
              <div class="meeting-text">
                <strong>Calendar</strong>
                <a href="{{ calendar_link | default(default_calendar) }}" target="_blank" rel="noopener">
                  Add to Calendar
                </a>
              </div>
            </div>
            <div class="meeting-link-item">
              <svg class="meeting-icon">
                <use xlink:href="/images/icons.svg#video"></use>
              </svg>
              <div class="meeting-text">
                <strong>Recordings</strong>
                <a href="{{ recordings_link | default(default_recordings) }}" target="_blank" rel="noopener">
                  View Past Meetings
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 
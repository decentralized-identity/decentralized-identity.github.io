{% extends "default.html.njk" %}

{% block content %}
<section class="page-title theme-bg">
  <div class="container">
    <svg><use xlink:href="/images/icons.svg#{{ group.logo }}"></use></svg>
    <h1>{{ group.name }}</h1>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>{{ group.title }}</h2>
        {% if group.shortform %}
        <p class="text-muted">{{ group.shortform }}</p>
        {% endif %}

        {% if group.scope %}
        <h3>Scope</h3>
        <p>{{ group.scope }}</p>
        {% endif %}

        {% if group.chairs %}
        <h3>Chairs</h3>
        <div class="row">
          {% for name, chair in group.chairs %}
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <div class="card-body">
                <img src="{{ chair.photo }}" alt="{{ name }}" class="rounded-circle mb-3" width="100">
                <h4>{{ name }}</h4>
                <p>{{ chair.title }}</p>
                <div class="social-links">
                  {% if chair.linkedin %}
                  <a href="https://linkedin.com/in/{{ chair.linkedin }}" target="_blank"><i class="fab fa-linkedin"></i></a>
                  {% endif %}
                  {% if chair.twitter %}
                  <a href="https://twitter.com/{{ chair.twitter }}" target="_blank"><i class="fab fa-twitter"></i></a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
        {% endif %}

        {% if group.projects %}
        <h3>Projects</h3>
        <div class="row">
          {% for name, project in group.projects %}
          <div class="col-md-6 mb-4">
            <div class="card h-100">
              <div class="card-body">
                <h4>{{ name }}</h4>
                <p>{{ project.desc }}</p>
                {% if project.links %}
                <div class="mt-3">
                  {% for link in project.links %}
                  <a href="{{ link.href }}" class="btn btn-outline-primary me-2 mb-2" target="_blank">{{ link.text }}</a>
                  {% endfor %}
                </div>
                {% endif %}
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% endblock %} 
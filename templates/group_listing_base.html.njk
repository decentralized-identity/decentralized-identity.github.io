{% extends "default.html.njk" %}

{% block content %}
<section class="page-title theme-bg">
  <div class="container">
    <h1>{{ title }}</h1>
    {% if subtitle %}
      <p class="lead text-white mb-0">{{ subtitle }}</p>
    {% endif %}
  </div>
</section>

<section>
  <div class="container">
    {% if overview %}
      <div class="row mb-5">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              {{ overview | safe }}
            </div>
          </div>
        </div>
      </div>
    {% endif %}

    {# Active Groups #}
    <div class="row">
      {% for group in activeGroups %}
        <div class="col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <div class="d-flex align-items-center mb-3">
                {% if group.logoImage %}
                  <img src="{{ group.logoImage }}" 
                       class="me-3" 
                       {% if group.logoSize %}
                       style="width: {{ group.logoSize.width }}px; height: {{ group.logoSize.height }}px"
                       {% else %}
                       style="width: 40px; height: 40px"
                       {% endif %}
                       alt="{{ group.name }} logo">
                {% elif group.logo %}
                  <svg class="me-3" style="width: 40px; height: 40px">
                    <use xlink:href="/images/icons.svg#{{ group.logo }}"></use>
                  </svg>
                {% endif %}
                <h3 class="card-title h4 mb-0">{{ group.name }}</h3>
              </div>

              {% if group.shortform %}
                <p class="text-muted small">{{ group.shortform }}</p>
              {% endif %}

              <div class="mb-3">
                {{ group.scope | truncate(150) }}
              </div>

              {% if group.meeting %}
                <div class="d-flex align-items-center text-muted small mb-3">
                  <svg class="me-2" style="width: 16px; height: 16px">
                    <use xlink:href="/images/icons.svg#calendar"></use>
                  </svg>
                  {{ group.meeting.schedule }}
                </div>
              {% endif %}

              <div class="mt-auto">
                <a href="{{ group.url }}" 
                   class="btn btn-primary" 
                   {% if group.isExternal %}target="_blank" rel="noopener"{% endif %}>
                  Learn More
                  {% if group.isExternal %}
                    <svg class="ms-1" style="width: 14px; height: 14px">
                      <use xlink:href="/images/icons.svg#external"></use>
                    </svg>
                  {% endif %}
                </a>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {# Archived Groups #}
    {% if archivedGroups and archivedGroups.length > 0 %}
      <div class="row mt-5">
        <div class="col-12">
          <h2 class="h3 mb-4">Archived {{ groupType }}</h2>
          <div class="list-group">
            {% for group in archivedGroups %}
              <a href="{{ group.url }}" 
                 class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                 {% if group.isExternal %}target="_blank" rel="noopener"{% endif %}>
                {{ group.name }}
                {% if group.isExternal %}
                  <svg class="external-link-icon">
                    <use xlink:href="/images/icons.svg#external"></use>
                  </svg>
                {% endif %}
              </a>
            {% endfor %}
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</section>
{% endblock %} 
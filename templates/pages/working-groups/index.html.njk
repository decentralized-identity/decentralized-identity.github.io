{% extends "default.html.njk" %}
{% from "partials/group-card.html.njk" import groupCard %}
{% set title = "Working Groups" %}
{% set css = ['directory', 'group-cards'] %}

{% block content %}
<section class="page-title theme-bg">
  <div class="container">
    <h1>Working Groups</h1>
  </div>
</section>

<section class="group-section">
  <div class="container">
    <div class="group-cards-grid">
      {% for id, group in workingGroups.activeWorkingGroups %}
        {{ groupCard(group) }}
      {% endfor %}
    </div>

    {% if workingGroups.archivedWorkingGroups | length > 0 %}
      <div class="section-header">
        <h2>Completed or Archived Working Groups</h2>
      </div>
      <div class="group-cards-grid">
        {% for id, group in workingGroups.archivedWorkingGroups %}
          {{ groupCard(group, "compact") }}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>
{% endblock %} 
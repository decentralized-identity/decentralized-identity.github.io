{% extends "default.html.njk" %}

{% block content %}
  <section class="page-title theme-bg">
    <div class="container">
      {% if logo %}
        <svg>
          <use xlink:href="/images/icons.svg#{{logo}}"></use>
        </svg>
      {% elif logoImage %}
        <img src="{{logoImage}}" alt="{{name}} User Group" {% if logoSize %}width="{{logoSize.width}}" height="{{logoSize.height}}"{% endif %}/>
        <br><br>
      {% endif %}
      <h1>{{name}}</h1>
      {% if subtitle %}
        <br>
        <h3>{{subtitle}}</h3>
      {% endif %}
      {% if type %}
        <h4>This is an {% if type == "open-public" %}open, public{% elif type == "open-non-ipr" %}open, non-IPR{% else %}open{% endif %} group</h4>
      {% endif %}
    </div>
  </section>

  <section class="counter-section">
    <div class="container">
      <div class="row justify-content-center m-45px-b md-m-20px-b sm-m-15px-b">
        <div class="col-12 col-md-10 col-lg-10">
          <div class="section-title text-center">
            <h2 class="font-alt">Scope of Group</h2>
            <div class="title-border">
              <span class="lg"></span>
              <span class="md"></span>
              <span class="sm"></span>
            </div>
            <p>{{scope}}</p>
          </div>
        </div>
        <div class="col-10 col-md-8 col-lg-6 m-30px-t margin-center">
          <dl>
            {% for key, val in charters %}
              <dt>{{key}}</dt>
              <dd>
                {% if val.desc %}<p>{{val.desc}}</p>{% endif %}
                {% if val.links %}
                  {% for link in val.links %}
                    <a class="block-link icon-link" href="{{link.href}}">{{link.text}}</a>
                  {% endfor %}
                {% endif %}
              </dd>
            {% endfor %}
          </dl>
        </div>
      </div>
      {% if meeting %}
        <div style="text-align:center">
          {% if meeting.schedule %}
            {{meeting.schedule}}
          {% endif %}
          {% if meeting.link %}
            <br><a href="{{meeting.link}}">Join Meeting</a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </section>

  {% if projects %}
    <section class="counter-section gray-bg">
      <div class="container">
        <div class="counter-row">
          <div class="column justify-content-center">
            <div class="col-12">
              <div class="section-title text-center">
                <h2 class="font-alt">Specs &amp; Projects</h2>
                <div class="title-border">
                  <span class="lg"></span>
                  <span class="md"></span>
                  <span class="sm"></span>
                </div>
                <p>The active work items that are underway in the {{name}} Special Interest Group</p>
              </div>
            </div>
            <div class="col-10 col-md-8 col-lg-6 m-30px-t margin-center">
              <dl>
                {% for key, val in projects %}
                  <dt>{{key}}</dt>
                  <dd>
                    {% if val.desc %}<p>{{val.desc}}</p>{% endif %}
                    {% if val.links %}
                      {% for link in val.links %}
                        <div>
                          <a class="icon-link" href="{{link.href}}">{{link.text}}</a>
                          {% if link.note %} {{link.note}}{% endif %}
                        </div>
                      {% endfor %}
                    {% endif %}
                  </dd>
                {% endfor %}
              </dl>
            </div>
          </div>
        </div>
      </div>
    </section>
  {% endif %}

  <section class="counter-section">
    <div class="container">
      <div class="row justify-content-center m-45px-b md-m-20px-b sm-m-15px-b">
        <div class="col-12 col-md-10 col-lg-7">
          <div class="section-title text-center">
            <h2 class="font-alt">User Group Chairs</h2>
            <div class="title-border">
              <span class="lg"></span>
              <span class="md"></span>
              <span class="sm"></span>
            </div>
            <p>The following DIF members lead this User Group, contact them for more info on the projects, specs, and development happening within.</p>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        {% for key, val in chairs %}
          <div class="col-10 col-md-6 col-lg-4 m-15px-tb">
            <div class="our-team">
              <div class="img">
                <img src="{{val.photo}}"/>
              </div>
              <div class="info">
                <h6>{{key}}</h6>
                <label>{{val.title | safe}}</label>
              </div>
              <ul class="social-icons">
                {% if val.linkedin %}
                  <li>
                    <a class="linkedin" href="https://www.linkedin.com/in/{{val.linkedin}}">
                      <svg><use xlink:href="/images/icons.svg#linkedin"></use></svg>
                    </a>
                  </li>
                {% endif %}
                {% if val.twitter %}
                  <li>
                    <a class="twitter" href="https://twitter.com/{{val.twitter}}">
                      <svg><use xlink:href="/images/icons.svg#twitter"></use></svg>
                    </a>
                  </li>
                {% endif %}
                {% if val.email %}
                  <li>
                    <a class="email" href="mailto:{{val.email}}">
                      <svg><use xlink:href="/images/icons.svg#mail"></use></svg>
                    </a>
                  </li>
                {% endif %}
              </ul>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %} 